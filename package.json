{
	"name": "shell2node",
	"version": "0.10.2",
	"type": "module",
	"main": "bin/shell2node.js",
	"bin": {
		"shell2node": "dist/shell2node.js"
	},
	"keywords": [
		"cli",
		"developer-tools",
		"shell",
		"automation",
		"record",
		"replay",
		"shell-to-node",
		"productivity",
		"nodejs"
	],
	"repository": {
		"url": "https://github.com/Silent-Watcher/shell2node"
	},
	"author": {
		"email": "backendwithali@gmail.com",
		"name": "Ali nazari"
	},
	"engines": {
		"node": ">=22.18.0"
	},
	"engineStrict": true,
	"license": "MIT",
	"description": "Record a shell pipeline and generate a reusable Node.js script that reproduces the pipeline with streaming child processes. Turn throwaway terminal magic into shareable, maintainable scripts.",
	"scripts": {
		"tsc": "tsc",
		"dev": "node --watch src/shell2node.ts",
		"prebuild": "npm run tsc && npm run clean",
		"build": "tsup",
		"prestart": "npm run build",
		"start": "node dist/shell2node.js",
		"test": "vitest run --coverage",
		"test:watch": "vitest dev",
		"prelint": "biome format --write ./src/*.ts ./tests/*.ts",
		"lint": "biome lint ./src/*.ts ./tests/*.ts",
		"check": "biome check --write ./src/*.ts ./tests/*.ts",
		"prepare": "husky",
		"commit": "cz",
		"clean": "del-cli dist/ coverage/ *.log",
		"prepublishOnly": "npm run clean && npm run build"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"devDependencies": {
		"@biomejs/biome": "^2.1.4",
		"cz-conventional-changelog": "^3.3.0",
		"del-cli": "^6.0.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.1.5",
		"tsup": "^8.5.0",
		"typescript": "^5.9.2",
		"vitest": "^3.2.4"
	}
}
